/* pages/chapterList/chapterlist.wxss */

page {
    height: 100%;
}

.body {
    max-height: 100%;
    min-height: 100%;
}

.scroll_view {
    width: 100%;
}

.title {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20rpx;
}

.title_text {
    font-size: 50rpx;
}

.order_by {
    color: #ffe;
    font-size: 30rpx;
    position: absolute;
    right: 20rpx;
}

.chapter_list {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 180rpx;
}

.chapter_item {
    margin: 10rpx 20rpx;
}

.bottom_view {
    width: 100%;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    bottom: 0rpx;
    background: RGBA(0, 0, 0, 0.5);
}

.button_view {
    background: #fff;
    color: #000;
    width: 200rpx;
    height: 70rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 10rpx;
}

.button_temp {
    width: 200rpx;
    height: 70rpx;
}

.picker_view {
    flex-grow: 1;
    height: 68rpx;
    border: 1px solid #fff;
    /* margin: 0 10rpx; */
    border-radius: 5rpx;
    /* display: flex; *//* justify-content: center; *//* align-items: center; */
    padding: 0 0;
    padding-bottom: 0;
    color: #fff;
    text-align: center;
}

.picker_view image {
    width: 42rpx;
    height: 42rpx;
    /* margin-top: 15rpx; */
}

.picker_view view {
    width: 100%;
    height: 100%;
    margin: 0 0;
    margin-top: 10rpx;
}

.empty {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    color: #f00;
}
