/* pages/searchResult/searchResult.wxss */

.header {
    width: 100%;
    height: 100rpx;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    position: fixed;
    top: 0;
}

.search_result_list {
    height: 100rpx;
    width: 100%;
    margin-top: 125rpx;
}

.search_result_item {
    border-radius: 5px;
    margin: 35rpx 30rpx;
    padding: 30rpx 10rpx;
    color: #fff;
	background: rgba(0, 0, 0, 0.4);
	box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.4);
}

.search_result_item_title {
    display: flex;
    align-items: center;
    padding-bottom: 8rpx;
    /* border-bottom: 1px solid #f00; */
}

.novelName {
    flex-grow: 1;
}

.author {
    font-size: 25rpx;
    color: #dcdcdc;
    margin-right: 20rpx;
}

.search_result_item_content {
    font-size: 28rpx;
	margin-left: 10rpx;
	margin-top: 10rpx;
	display: flex;
	flex-direction: column;
}

.news_chapter_content{
	display: flex;
	align-items: center
}

.news_chapter_title {
	/* padding-bottom: 2rpx; */
	border-bottom: 1px solid #00f	
}


.item_bottom{
	margin-top: 15rpx;
	margin-bottom: 15rpx;
	display: flex;
}

.item_bottom_update_time{
	flex-grow: 1;
}
